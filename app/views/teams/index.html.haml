%h1 Teams

%table
  %thead
    %tr
      %th Name
      %th
      %th
      
  %tbody
    - @teams.each do |team|
      %tr
        %td= link_to 'Show', team, class: 'btn btn-default btn-xs'
        %td= link_to 'Edit', edit_team_path(team), class: 'btn btn-default btn-xs'
        %td= link_to 'Destroy', team, 
          method: :delete, 
          data: { confirm: 'Are you sure?' },
          class: 'btn btn-default btn-danger'
